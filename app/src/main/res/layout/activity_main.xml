<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.picsarttraining.soundcontrolwidget.MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content">

        <com.picsarttraining.soundcontrolwidget.SoundControlView
            android:id="@+id/sound_control_view"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            app:circleColor="#ff6600"
            app:pointerColor="#660099"
            app:circleBackgroundColor="#cc0000"
            app:piecesCount="20"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:id="@+id/play_button"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:layout_marginTop="30dp"
            android:src="@drawable/play_button" />
    </LinearLayout>
</RelativeLayout>
